<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/image_logo_description"
            android:src="@drawable/ic_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Informe Evento"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoligth"
            android:gravity="center"
            android:text="Crear un informe con los datos encontrados en el evento" />

        <EditText
            android:id="@+id/edt_name_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_text"
            android:drawableStart="@drawable/ic_event"
            android:enabled="false"
            android:fontFamily="@font/robotoligth"
            android:hint="Nombre de Evento"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:text="Nombre de Evento" />

        <EditText
            android:id="@+id/edt_date_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_text"
            android:drawableStart="@drawable/ic_date"
            android:fontFamily="@font/robotoligth"
            android:hint="Fecha"
            android:inputType="date"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_text"
            android:drawableStart="@drawable/ic_user"
            android:fontFamily="@font/robotoligth"
            android:hint="Mi Usuario"
            android:inputType="date"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edt_user_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_text"
            android:drawableStart="@drawable/ic_person"
            android:fontFamily="@font/robotoligth"
            android:hint="NÂ° afectados aproximado"
            android:inputType="date"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edt_description_event"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_text"
            android:fontFamily="@font/robotoligth"
            android:gravity="center"
            android:hint="Informacion Adicional"
            android:inputType="date"
            android:padding="10dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_button_green"
            android:text="Enviar Informe"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_button_black"
            android:text="Cancelar"
            android:textColor="@color/white" />

    </LinearLayout>


</ScrollView>